@model List<CommentViewModel>



@foreach (CommentViewModel item in Model)
{
    <div class="blog">
        <div class="adminBlogList col-12">
            <h1>@item.CommentWriter</h1>
            <br />
            <h1>@item.CommentText</h1>
            <br />
            <span>@item.CommentAddTime</span>
            <a asp-action="EditComment" asp-route-id="@item.CommentId">Edit</a>
            <a class="deleteBtn btn btn-danger" asp-route-id="@item.CommentId" asp-action="UserDeleteComment" asp-controller="Admin" asp-area="Admin">Sil</a>
        </div>
    </div>
}